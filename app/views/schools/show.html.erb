<section class="row">
  <div class="three columns">
    <img src="http://placehold.it/350x300"/>
    <h5><%= @school.name %></h5>
    <ul>
      <li>
        <%= @school.address %>
      </li>
        <% if @school.url? %>
          <li>
            <%= link_to 'School Website', @school.url %>
          </li>
        <% end %>
      <li>
        <%= @school.level.titleize %>
      </li>
      <li>
        OPA Account:
        <%= @school.opa %>
      </li>
      <li>
        <% if @school.mkt_val_2014 != -1 %>
          2014 Market Value: <%= number_to_currency(@school.mkt_val_2014, :precision => 0) %>
        <% end %>
      </li>
    </ul>
  </div>

  <div class="nine columns">
    <div id="news">
