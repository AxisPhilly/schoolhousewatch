<section class="row">
  <div class="twelve columns">
    <ul class="breadcrumbs">
      <li><a href="/">Schoolhouse Watch</a></li>
      <li class="current"><a href="#"><%= @school.name.titleize %></a></li>
    </ul>
  </div>  
</section>

<section class="row">
  <div class="five columns">
    <% if @school.flickr_image_url.present? && @school.flickr_image.present?%>
      <%= link_to image_tag(@school.flickr_image_url, :width => 350), @school.flickr_image %>
    <% else %>
      <%= @school.street_view.html_safe %>
    <% end %>
    <h5><%= @school.name %></h5>
    <ul>
      <li>
        <%= @school.address %>
      </li>
        <% if @school.url? %>
          <li>
            <%= link_to 'Website', @school.url %>
          </li>
        <% end %>
      <li>
        <%= @school.level.titleize %>
      </li>
      <li>
        OPA Account:
        <%= @school.opa %>
      </li>
      <li>
        <% if @school.mkt_val_2014 != -1 %>
          2014 Market Value: <%= number_to_currency(@school.mkt_val_2014, :precision => 0) %>
        <% else %>
          This property has not yet been reassessed under AVI.
        <% end %>
      </li>
    </ul>
    
    <div id="news">
      
    </div>
  </div>

  <div class="seven columns">
    <div id="comments">
      <h5><%= t_meta(:comment_prompt) %></h5>
      <div id="disqus_thread"></div>
    </div>
  </div>
</section>

<script type="text/javascript">
  // Disqus stuff
  var disqus_shortname = 'axisphilly';
  var disqus_title = '<%= @title %>';
  var disqus_url = '<%= request.url %>';
  var disqus_identifier = 'axisphilly-<%= @school.name.gsub(" ", "").downcase %>';

  /* * * DON'T EDIT BELOW THIS LINE * * */
  (function() {
    var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
    dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
    (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
  })();
</script>